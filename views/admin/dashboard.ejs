<h2>dashboard</h2>

<div class="container">
    <div class="row">
        <div class="col-6">
          <center>User</center>
          <table class="table">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Email</th>
                <th scope="col">view</th>
                <th scope="col">delete</th>
              </tr>
            </thead>
            <tbody>
              <% for(let user of users){%>
                <% if(user.isAdmin==false){%>
                  <tr>
                    <th scope="row">1</th>
                    <td><%=user.email%></td>
                    <%=user.medicalHistroy%>
                    <td>
                    <%if(user.medicalHistroy==true){%>
                    <a href="/admin/userView/<%=user._id%>">View</a>
                    <%}%>
                    </td>
                    <td><a href="/admin/userDelete/<%=user._id%>">delete</a></td>
                  </tr>  
                  <%}%>
              <%}%>
              <tr>
                <th scope="row">2</th>
                <td>Jacob</td>
                <td>Thornton</td>
                <td>@fat</td>
              </tr>
              <tr>
                <th scope="row">3</th>
                <td colspan="2">Larry the Bird</td>
                <td>@twitter</td>
              </tr>
            </tbody>
          </table>
        </div>
        <div class="col-6">
            
        </div>
    </div>
    <div class="row">
        <div class="col-6">

        </div>
        <div class="col-6">

        </div>
    </div>
</div>

